{
  "compilerOptions": {
    "module": "es6",
    "target": "ES2019",
    "moduleResolution": "node",
    "lib": ["esnext", "dom"],
    "baseUrl": "src",
    "rootDir": "src",
    "outDir": "lib",
    "declaration": true,
    "declarationDir": "lib",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true
  },
  "exclude": ["node_modules"]
}
