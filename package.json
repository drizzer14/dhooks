{
  "name": "honks",
  "version": "0.1.0",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "author": "Dmytro Vasylkivskyi <drizzer14@gmail.com>",
  "license": "MIT",
  "repository": "git:drizzer14/honks",
  "description": "React hooks for your everyday life.",
  "keywords": [
    "react",
    "typescript",
    "hooks"
  ],
  "scripts": {
    "build:clear": "rimraf lib",
    "build:copy": "copyfiles package.json LICENSE README.md lib",
    "build:js": "babel src --out-dir lib --extensions \".ts\"",
    "build:dts": "tsc -p tsconfig.json",
    "build": "npm-run-all -s build:clear -p build:copy build:js build:dts",
    "release": "standard-version",
    "prepack": "yarn build",
    "publication": "yarn publish lib"
  },
  "devDependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.9.6",
    "@babel/preset-env": "^7.9.6",
    "@babel/preset-typescript": "^7.9.0",
    "@types/react": "^16.9.35",
    "@typescript-eslint/eslint-plugin": "^2.33.0",
    "@typescript-eslint/parser": "^2.33.0",
    "copyfiles": "^2.2.0",
    "eslint": "^7.0.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.3",
    "husky": ">=4",
    "lint-staged": ">=10",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.0.5",
    "react": "^16.13.1",
    "rimraf": "^3.0.2",
    "standard-version": "^8.0.0",
    "typescript": "^3.9.2"
  },
  "peerDependencies": {
    "react": ">=16.13"
  },
  "browserslist": {
    "production": [
      "ie 11",
      "edge >= 14",
      "firefox >= 52",
      "chrome >= 49",
      "safari >= 10"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "engines": {
    "node": ">=12"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write",
      "git add ."
    ]
  }
}
